.flash-box
  .wrapper
    .chat-side
      .side-header
        .side-header__box
          %p.side-header__box__user-name 
            = current_user.name
          %ul.side-header__box__menu
            %li.side-header__box__menu__new-group
              = link_to new_group_path do
                %i.fa.fa-edit
            %li.side-header__box__menu__edit-user
              = link_to edit_user_path(current_user) do
                = fa_icon 'cog', class: 'icon'
      .groups
        = link_to "#" do
          .group
            - current_user.groups.each do |group|
              = link_to '#' do
                .group__name
                  = group.name
                .group__message
                  メッセージはまだありません。
        = link_to "#" do
          .group
            %p.group__group-name ご飯食べようの会
            %p.group__latest-message はい？
    .chat-main
      .main-header
        .main-header__left-box
          %h2.main-header__left-box__current-group{"data-group_id" => "3455"}
            ご飯食べようの会
          %ul.main-header__left-box__member-list
            Member：
            %li.main-header__left-box__member-list__member shimashima
        = link_to "#" do
          .main-header__edit-btn Edit
      .messages
        .message{"data-message_id" => "7"}
          .message__upper-info
            %p.message__upper-info__talker shimashima
            %p.message__upper-info__date 2019/08/21(Wed) 12:20:42
          %p.message__text とりあえず食うべく宇部
        .message{"data-message_id" => "8"}
          .message__upper-info
            %p.message__upper-info__talker shimashima
            %p.message__upper-info__date 2019/08/21(Wed) 12:20:50
          %p.message__text お腹すいたっす先輩
      .form
        %form#new_message.new_message{"accept-charset" => "UTF-8", :action => "/groups/3455/messages", :enctype => "multipart/form-data", :method => "post"}
          %input{:name => "utf8", :type => "hidden", :value => "✓"}/
          %input{:name => "authenticity_token", :type => "hidden", :value => "+vMmSPwvRhpNNCZgRF6NkwVuGJp5ixDpXu2aJOUJoME4YPlK+4GpCd04f2WYEaFBQhRC+xHFTJK1V4vTZex4cA=="}/
          .input-box
            %input#message_content.input-box__text{:name => "message[content]", :placeholder => "type a message", :type => "text"}/
            %label.input-box__image{:for => "message_image"}
              %i.fa.fa-image
              %input#message_image.input-box__image__file{:name => "message[image]", :type => "file"}/
          %input.submit-btn{"data-disable-with" => "Send", :name => "commit", :type => "submit", :value => "Send"}/
